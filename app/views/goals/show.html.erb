<% content_for :title do %>
  Goal &ndash; <%= DateTime.now.to_s(:nice_date) %>
<% end %>

<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
      <%= @goal.title %>
      </p>

      <div class="panel-block">
        <%= @goal.body %>
      </div>
    </nav>

    <div class="columns is-mobile">
      <div class="column">
        <%= link_to 'Edit', edit_goal_path(@goal), class: "button is-gray" %>
        <%= link_to 'Delete', goal_path(@goal), method: :delete, data: { confirm: "Are you sure?" }, class: "button is-gray" %>
      </div>
      <div class="column">

      </div>
    </div>
  </div>
</div>
